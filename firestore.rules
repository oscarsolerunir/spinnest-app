rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸ”¹ PERMITIR QUE LOS USUARIOS AUTENTICADOS LEAN USERS
    match /users/{documentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == documentId;
    }

    // ðŸ”¹ PERMITIR QUE LOS USUARIOS AUTENTICADOS LEAN Y ESCRIBAN EN ALBUMS Y COLLECTIONS
    match /albums/{documentId} {
      allow read, write: if request.auth != null;
    }

    match /collections/{documentId} {
      allow read, write: if request.auth != null;
    }

    // ðŸ”¹ PERMITIR QUE CADA USUARIO SOLO LEA Y ESCRIBA SU PROPIA WISHLIST
    match /wishlist/{documentId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
